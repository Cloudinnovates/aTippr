{
  "rules": {
    "categories": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('admin').val() === true"
    },
    "matches": {
      ".indexOn": ["category", "matchstart"],
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('admin').val() === true"
    },
    "ranking": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('admin').val() === true"
    },
    "teams": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('admin').val() === true"
    },
    "tipps": {
      "$uid": {
    		".indexOn": ["category"],
        ".read": "$uid == auth.uid || root.child('users').child(auth.uid).child('admin').val() === true",
        ".write": "$uid === auth.uid && root.child('matches').child( newData.child('match').val() ).child('matchstart').val() >= now",
        "$tippid": {
          ".read": "$uid == auth.uid || root.child('users').child(auth.uid).child('admin').val() === true",
          ".write": "$uid === auth.uid && root.child('matches').child( newData.child('match').val() ).child('matchstart').val() >= now"
        }
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid == auth.uid || root.child('users').child(auth.uid).child('admin').val() === true"
      }
    }
  }
}